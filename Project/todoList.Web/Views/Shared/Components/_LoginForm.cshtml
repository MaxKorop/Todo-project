@model UserLoginModel

<form asp-action="Login" asp-controller="User">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input asp-for="UserName" type="username" class="form-control rounded-3" id="floatingInput" placeholder="Username">
        <label asp-for="UserName" for="floatingInput" style="color: black" reqired>Username</label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Password" type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
        <label asp-for="Password" for="floatingPassword" style="color: black" required>Password</label>
    </div>
    <span asp-validation-for="UserName" class="text-danger"></span>
    <span asp-validation-for="Password" class="text-danger"></span>
    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit" value="Login">Login</button>
</form>